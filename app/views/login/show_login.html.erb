<div id="login"> 
	<fieldset id="log_fieldset">
		<legend>Login</legend>
			<%= form_tag login_path do %>
			<p>
				<%= label_tag :email %>
				<%= text_field_tag :email, params[:email] %>
			</p>
			<p>
				<%= label_tag :password %>
				<%= password_field_tag %>
			</p>
			<p><%= submit_tag "Log in" %></p>
		<% end %>

		<p><%= link_to "Benutzerkonto erstellen", new_user_path %></p>

	</fieldset>
</div>